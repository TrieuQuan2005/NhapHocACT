@{
var maNhapHoc = Context.Session.GetString("MaNhapHoc") ?? "ADMIN";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang quản trị - Admin</title>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to bottom, #e74c3c, #f9ebea);
            padding: 0;
            margin: 0;
        }

        /* NAVBAR */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #c0392b;
            color: white;
            padding: 16px 40px;
            border-bottom: 3px solid #a93226;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            flex-wrap: wrap;
        }

        /* LOGO */
        .Logo {
            display: flex;
            align-items: center;
        }

        .Logo img.logo {
            height: 80px;
            margin-right: 16px;
        }

        .Logo img.text {
            height: 40px;
        }

        /* NAV LINKS */
        .nav-links {
            display: flex;
            align-items: center;
            gap: 25px;
            margin-left: auto;
            margin-right: 20px;
        }

        .nav-links a,
        .dropbtn {
            font-size: 20px;
            font-weight: 600;
            padding: 12px 20px;
            border-radius: 8px;
            color: white;
            text-decoration: none;
            background: transparent;
            border: none;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
        }

        .nav-links a:hover,
        .dropbtn:hover {
            background-color: #922b21;
            transform: translateY(-2px);
        }

        /* DROPDOWN */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #fff;
            min-width: 220px;
            border-radius: 8px;
            box-shadow: 0px 6px 12px rgba(0,0,0,0.2);
            z-index: 1000;
            overflow: hidden;
        }

        .dropdown-content a {
            color: #333;
            padding: 14px 18px;
            text-decoration: none;
            display: block;
            font-size: 16px;
            border-bottom: 1px solid #eee;
            transition: background 0.2s;
        }

        .dropdown-content a:last-child {
            border-bottom: none;
        }

        .dropdown-content a:hover {
            background-color: #f8d7da; /* đỏ nhạt */
            color: #c0392b;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* USER INFO */
        .nav-right {
            display: flex;
            align-items: center;
            gap: 16px;
            font-size: 18px;
            font-weight: 500;
        }
        
        .user{
            font-size: 28px;
            color: white;
            font-weight: bold;
        }
        
        .logout-link {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            font-weight: bold;
            padding: 10px 18px;
            border-radius: 8px;
            background-color: #e74c3c;
            transition: background 0.3s, transform 0.2s;
        }

        .logout-link:hover {
            background-color: #b03a2e;
            transform: translateY(-2px);
        }

        .logout-icon {
            height: 30px;
            margin-right: 8px;
            
        }

        /* BODY */
        .container {
            padding: 30px 50px;
        }

        /* FOOTER */
        footer {
            margin-top: 40px;
            text-align: center;
            color: #555;
        }

        /* RESPONSIVE */
        @@media (max-width: 900px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
            padding: 20px;
        }

        .nav-links {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
            margin: 20px 0 0 0;
            width: 100%;
        }

        .nav-right {
            align-self: flex-end;
            margin-top: 15px;
        }
        }
    </style>
</head>

<body>
<div class="navbar">
    <!-- Logo -->
    <div class="Logo">
        <img src="~/images/logo.png" class="logo" />
        <img src="~/images/text.png" class="text" />
    </div>

    <!-- Nav links -->
    <div class="nav-links">
        
        <div class="dropdown">
            <button class="dropbtn">Quản lý sinh viên ▾</button>
            <div class="dropdown-content">
                <a href="@Url.Action("ThongKe", "Admin")">📊 Thống kê</a>
                <a href="@Url.Action("SubmitedList", "Admin")">🧾 Sinh viên đã nhập học</a>
                <a href="@Url.Action("InvalidUserForms","Admin")">Sinh viên chưa nhập học</a>
                <a href="@Url.Action("SinhVienTrungTuyen","Admin")">Danh sách sinh viên trúng tuyển</a>
                <a href="@Url.Action("SendSucessEmail", "Admin")">Danh sách sinh viên nhập học thành công</a>
                <a href="@Url.Action("DuyetDinhChinh", "Admin")">📝 Yêu cầu đính chính</a>
                <a href="@Url.Action("Quanlysinhvien", "Admin")">Quản lý tài khoản sinh viên</a>
            </div>
        </div>
        
        <div class="dropdown">
            <button class="dropbtn">⚙️ Công cụ ▾</button>
            <div class="dropdown-content">
                <a href = "@Url.Action("ExportExcelForm", "Admin")">📤 Xuất Excel</a>
                <a href = "@Url.Action("DownloadAllUserFiles","Admin")">Tải về hồ sơ</a>
                <a href = "@Url.Action("pdfSplitter","Admin")">Tách PDF</a>
            </div>
        </div>
    </div>

    <!-- User -->
    <div class="nav-right">
        <span class ="user">👤 @maNhapHoc</span>
        <a href="@Url.Action("Logout", "Auth")" class="logout-link">
            <img src="~/images/LogOut.png" class="logout-icon" />Đăng xuất
        </a>
    </div>
</div>

<!-- Content -->
<div class="container">
    @RenderBody()
</div>

<!-- Footer -->
<footer>
    &copy; @DateTime.Now.Year - Hệ thống Quản lý Nhập học
</footer>
</body>
</html>
